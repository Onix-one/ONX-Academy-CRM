@using ONX.CRM.ViewModel

@{
    Dictionary<int, string> coursesForDropMenu = ViewBag.Courses;
}


@model IEnumerable<StudentViewModel>


<div class="page-wrapper">
    <div class="page-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">ONX.CRM</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Students</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-lg-9 col-xl-9">
                                <form class="float-lg-start" asp-controller="Groups" asp-action="Edit" method="post">
                                    <div class="row row-cols-lg-auto g-2">
                                        <div class="col-12">
                                            <div class="position-relative">
                                                <input type="text" class="form-control ps-5" placeholder="Search...">
                                                <span class="position-absolute top-50 product-show translate-middle-y">
                                                    <i class="bx bx-search"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                                <button type="button" class="btn btn-white">Sort by Course</button>
                                                <div class="btn-group" role="group">
                                                    <button id="btnGroupDrop1" type="button" class="btn btn-white dropdown-toggle dropdown-toggle-nocaret px-1" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bx bx-chevron-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                        <li><a class="dropdown-item" href="#">Course 001</a></li>
                                                        <li><a class="dropdown-item" href="#">Course 002</a></li>
                                                        <li><a class="dropdown-item" href="#">Course 003</a></li>
                                                        @*@foreach (var course in coursesForDropMenu)
                                                        {
                                                            <a class="dropdown-item" role="presentation" asp-controller="Requests" asp-action="Index" asp-route-id="@course.Key">@course.Value</a>
                                                        }*@
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                                <button type="button" class="btn btn-white">Sort by Training type</button>
                                                <div class="btn-group" role="group">
                                                    <button id="btnGroupDrop1" type="button" class="btn btn-white dropdown-toggle dropdown-toggle-nocaret px-1" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bx bxs-category"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                        <li><a class="dropdown-item" href="#">Online</a></li>
                                                        <li><a class="dropdown-item" href="#">Offline</a></li>
                                                        <li><a class="dropdown-item" href="#">Mix</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-lg-3 col-xl-3">
                                <div class="float-lg-end">
                                    <div class="row row-cols-lg-auto g-2">
                                        <div class="col-12">
                                            <a asp-controller="Students" asp-action="Edit" class="btn btn-outline-primary mb-3 mb-lg-0"><i class="bx bxs-plus-square"></i>Add new student</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div>
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Last Name</th>
                                <th>First Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Group Number</th>
                                <th>Course</th>
                                <th>Type of Training</th>
                                <th>View Details</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>@student.Id</td>
                                    <td>@student.LastName</td>
                                    <td>@student.FirstName</td>
                                    <td>@student.Email</td>
                                    <td>@student.Phone</td>

                                    @if (student.GroupId != null)
                                    {
                                        <td>@student.Group.Number</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    @if (student.GroupId != null)
                                    {
                                        <td>@student.Group.Course.Title</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td>@student.Type.ToString()</td>
                                    <td>
                                        <button type="button" class="btn btn-outline-primary btn-sm radius-30 px-4">View</button>
                                    </td>
                                    <td>
                                        <div class="d-flex order-actions">
                                            <div class="d-flex order-actions">
                                                <div>
                                                    <a asp-controller="Students" asp-action="Edit"
                                                       asp-route-id="@student.Id"><i class='bx bxs-edit'></i></a>
                                                </div>

                                                <div class="ps-2">
                                                    <a asp-controller="Students" asp-action="Delete"
                                                       asp-route-id="@student.Id">
                                                        <i class='bx bxs-trash'></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td>
                                    <div class="text-info">Total: @Model.Count()</div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

