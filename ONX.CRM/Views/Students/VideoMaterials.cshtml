@{

    IEnumerable<StudentViewModel> studentsList = ViewBag.Students;
    IEnumerable<LessonViewModel> lessonsCollection = ViewBag.Lessons;
    var lessonsList = lessonsCollection.ToList();
    var firstLesson = 0;
    var lastLesson = lessonsList.Count() - 1;
    GroupViewModel currentGroup = ViewBag.CurrentGroup;

}
@model LessonViewModel
<div class="page-wrapper">
    <div class="page-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">ONX.CRM</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Video Materials</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="card">
            <div class="card-body">

                <div class="card-body">
                    <div class="collapse show">

                        @foreach (var lesson in lessonsList)
                        {
                            var data = $"{lesson.Date.Value.DayOfWeek}, " +
                                       $"{lesson.Date.Value.Day}/" +
                                       $"{lesson.Date.Value.Month}/ " +
                                       $"{lesson.Date.Value.Year} " +
                                       $"{lesson.Date.Value.Hour}:" +
                                       $"{lesson.Date.Value.Minute}";

                            <div class="card">
                                <div class="card-body">
                                    <div class="card-img-top">
                                        <a class="active" href="@lesson.VideoLink" target="_blank">@lesson.VideoLink</a>
                                    </div>
                                    <div class="card-body px-0">
                                        <h4 class="card-title">Lesson @lesson.Number</h4>
                                        <p class="card-text mb-1">Topic: @lesson.Topic</p>
                                        <p class="card-text">Date: @data</p>
                                        <p class="card-text"><small class="text-muted">Description: @lesson.Description</small></p>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
