@{

    IEnumerable<ManagerViewModel> managersList = ViewBag.Managers;
}

@model ManagerViewModel

<div class="page-wrapper">
    <div class="page-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">ONX.CRM</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Managers</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="float-lg-end">
                            <div class="row row-cols-lg-auto g-2">
                                <div class="col-12">
                                    <a asp-controller="Managers" asp-action="Edit" class="btn btn-outline-primary mb-3 mb-lg-0"><i class="bx bxs-plus-square"></i>Add new Manager</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div>
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>View Details</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var manager in managersList)
                                {
                                    <tr>
                                        <td>@manager.Id</td>
                                        <td>@manager.LastName</td>
                                        <td>@manager.FirstName</td>
                                        <td>@manager.Email</td>
                                        <td>@manager.Phone</td>
                                        <td>
                                            <button type="button" class="btn btn-outline-primary btn-sm radius-30 px-4">View Details</button>
                                        </td>
                                        <td>
                                            <div class="d-flex order-actions">
                                                <div class="d-flex order-actions">
                                                    <div>
                                                        <a asp-controller="Managers" asp-action="Edit"
                                                           asp-route-id="@manager.Id"><i class='bx bxs-edit'></i></a>
                                                    </div>

                                                    <div class="ps-2">
                                                        <a asp-controller="Managers" asp-action="Delete"
                                                           asp-route-id="@manager.Id">
                                                            <i class='bx bxs-trash'></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td>
                                        <div class="text-info">Total: @managersList.Count()</div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
