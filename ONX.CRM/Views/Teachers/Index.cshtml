@{

    IEnumerable<TeacherViewModel> teachersList = ViewBag.Teachers;
}

@model TeacherViewModel

<div class="page-wrapper">
    <div class="page-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">ONX.CRM</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Teachers</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-lg-9 col-xl-9">
                            <form class="float-lg-start" asp-controller="Teachers" asp-action="SearchTeachers" method="post">
                                <div class="row row-cols-lg-auto g-2">
                                    <div class="col-12">
                                        <div class="position-relative">
                                            @if (Model != null)
                                            {
                                                <input asp-for="Search.Query" type="text" class="form-control ps-5" placeholder="@Model.Search.Query">
                                            }
                                            else
                                            {
                                                <input asp-for="Search.Query" type="text" class="form-control ps-5" placeholder="Search...">
                                            }
                                            <span class="position-absolute top-50 product-show translate-middle-y">
                                                <i class="bx bx-search"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-outline-success mb-3 mb-lg-0">Find</button>
                                    </div>
                                    <div class="col-12">
                                        <a asp-controller="Teachers" asp-action="Index" class="btn btn-outline-primary mb-3 mb-lg-0">Show all</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-3 col-xl-3">
                            <div class="float-lg-end">
                                <div class="row row-cols-lg-auto g-2">
                                    <div class="col-12">
                                        <a asp-controller="Teachers" asp-action="Edit" class="btn btn-outline-primary mb-3 mb-lg-0"><i class="bx bxs-plus-square"></i>Add new teacher</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div>
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Work Experience</th>
                                    <th>View Details</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var teacher in teachersList)
                                {
                                    <tr>
                                        <td>@teacher.Id</td>
                                        <td>@teacher.LastName</td>
                                        <td>@teacher.FirstName</td>
                                        <td>@teacher.Email</td>
                                        <td>@teacher.Phone</td>
                                        <td>@teacher.WorkExperience</td>
                                        <td>
                                            <button type="button" class="btn btn-outline-primary btn-sm radius-30 px-4">View Details</button>
                                        </td>
                                        <td>
                                            <div class="d-flex order-actions">
                                                <div class="d-flex order-actions">
                                                    <div>
                                                        <a asp-controller="Teachers" asp-action="Edit"
                                                           asp-route-id="@teacher.Id"><i class='bx bxs-edit'></i></a>
                                                    </div>

                                                    <div class="ps-2">
                                                        <a asp-controller="Teachers" asp-action="Delete"
                                                           asp-route-id="@teacher.Id">
                                                            <i class='bx bxs-trash'></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td>
                                        <div class="text-info">Total: @teachersList.Count()</div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
