@using ONX.CRM.ViewModel
@{
    string specializationTitle = ViewBag.SpecializationTitle;
}

@model List<CourseViewModel>

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">ONX-Academy</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">

                            <a asp-controller="Specializations" asp-action="Index">Specializations</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            @specializationTitle.ToUpper()
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="container">
            <h1 class="display-4">@specializationTitle.ToUpper()<br></h1>
            <hr />
            <div class="card-group shadow">
                @foreach (var course in Model)
                {

                    <div class="card border-end shadow-none">
                        <div class="card-body">
                            <h4 class="card-title">@course.Title<br></h4>
                            <p class="card-text">@course.Description</p>
                            @if (@course.NecessaryPreKnowledge != null)
                            {
                                <p>Necessary pre-knowledge:&nbsp;<br>@course.NecessaryPreKnowledge<br></p>
                            }

                            <p>Cost : @course.Cost BYN<br></p>


                           
                                
                                    <a asp-controller="Requests" asp-action="EditFromQuery"
                                       asp-route-id="@course.Id" class="btn btn-outline-primary radius-15">
                                        Enroll in a course
                                    </a>
                               
                                
                           
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
