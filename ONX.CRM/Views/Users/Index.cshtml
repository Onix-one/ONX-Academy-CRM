@model IEnumerable<ONX.CRM.DAL.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

<div class="page-wrapper">
    <div class="page-content">
        <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-3">
            <div class="col mx-auto">
                <div class="card">
                    <a class="btn btn-sm btn-primary" asp-controller="Users" asp-action="Create">Добавить пользователя</a>
                    <table class="table">
                        <tr><th>Email</th><th>Год</th><th></th></tr>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.LastName</td>
                                <td>@user.FirstName</td>
                                <td>@user.Email</td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                                        <a class="btn btn-sm btn-primary" asp-controller="Profile" 
                                           asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Удалить
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>