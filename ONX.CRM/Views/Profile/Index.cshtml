@{

}
@model ProfileViewModel
<div class="page-wrapper">
    <div class="page-content">

        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">User Profile</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">User Profilep</li>
                    </ol>
                </nav>
            </div>
            <div class="ms-auto">
                <input asp-for="UserId" type="hidden" value="@Model.UserId">
                <a asp-controller="Profile" asp-action="ChangePassword"
                   asp-route-id="@Model.UserId" class="btn btn-outline-danger px-4"><span>Change Password</span></a>
            </div>
        </div>
        <!--end breadcrumb-->
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <div class="main-body">
                        <div class="row">
                            <div class="col-lg-4">

                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img src="~/assets/images/avatar-lazybones.png" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
                                        <div class="mt-3">
                                            <h4>@Model.FirstName @Model.LastName</h4>
                                            <p class="text-secondary mb-1">Full Stack Developer</p>
                                            <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                                            <button class="btn btn-primary">Follow</button>
                                            <button class="btn btn-outline-primary">Message</button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-lg-8">

                                <div class="card-body">
                                    <form asp-controller="Profile" asp-action="Index" method="post">
                                        <h2 class="text-center m-0">Manager</h2>
                                        <div class="card-body">
                                            <div>
                                                <input type="hidden" asp-for="Id" value="@Model.Id" />
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">First Name</h6>
                                                </div>
                                                <div class="col-sm-9 text-secondary">
                                                    <input type="text" class="form-control" asp-for="FirstName" />
                                                    <span class="alert-danger" asp-validation-for="FirstName"></span>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Last Name</h6>
                                                </div>
                                                <div class="col-sm-9 text-secondary">
                                                    <input type="text" class="form-control" asp-for="LastName" />
                                                    <span class="alert-danger" asp-validation-for="LastName"></span>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Email</h6>
                                                </div>
                                                <div class="col-sm-9 text-secondary">
                                                    <input type="text" class="form-control" asp-for="Email" />
                                                    <span class="alert-danger" asp-validation-for="Email"></span>
                                                </div>
                                                @if (Model != null)
                                                {
                                                    <div class="col-sm-9 text-secondary">
                                                        <input type="hidden" class="form-control" asp-for="@Model.UserId" />
                                                    </div>
                                                }
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Phone</h6>
                                                </div>
                                                <div class="col-sm-9 text-secondary">
                                                    <input type="text" placeholder="+375(XX)XXX-XX-XX" class="form-control" asp-for="Phone" />
                                                    <span class="alert-danger" asp-validation-for="Phone"></span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-3"></div>
                                                <div class="col-sm-9 text-secondary">
                                                    <input type="submit" class="btn btn-outline-primary px-4" value="Save Changes">
                                                </div>

                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>