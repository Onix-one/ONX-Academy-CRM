@model ChangePasswordViewModel

<div class="page-wrapper">
    <div class="page-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">ONX.CRM</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">

                            <a asp-controller="Profile" asp-action="Index">Profile</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Change password for a user @Model.Email</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="card">
            <div class="row g-0">
                <div class="col-lg-5 border-end">
                    <div class="card-body">
                        <form asp-controller="Profile" asp-action="ChangePassword" method="post">
                            <div class="p-2">
                                <h3 class="mt-5 font-weight-bold">Change password</h3>
                                <p class="text-muted">Please enter your old and new password!</p>
                                <div>
                                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                                </div>
                                <div>
                                    <input type="hidden" asp-for="Email" value="@Model.Email" />
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="mb-3 mt-4">
                                    <label asp-for="OldPassword" class="form-label">Old Password</label>
                                    <div class="input-group" id="show_hide_new_password">
                                        <input type="password" class="form-control border-end-0" asp-for="OldPassword" placeholder="Enter Password">
                                        <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                    </div>
                                    <span class="alert-danger" asp-validation-for="OldPassword"></span>
                                </div>
                                <div class="mb-5">
                                    <label asp-for="NewPassword" class="form-label">New Password</label>
                                    <div class="input-group" id="show_hide_password">
                                        <input type="password" class="form-control border-end-0" asp-for="NewPassword" placeholder="Enter Password">
                                        <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                    </div>
                                    <span class="alert-danger" asp-validation-for="NewPassword"></span>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-outline-primary">Change Password</button>
                                    <a asp-controller="Profile" asp-action="Index"
                                       class="btn btn-outline-light"><i class="bx bx-arrow-back mr-1"></i>Back to Profile</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-7">
                    <img src="~/assets/images/login-images/forgot-password-frent-img-2.jpg" class="card-img login-img h-100" alt="...">
                </div>
            </div>
        </div>
    </div>
</div>
